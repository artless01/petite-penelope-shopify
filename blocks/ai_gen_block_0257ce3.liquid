      width: 95%;
      padding: 0 10px;
    }

    .ai-floating-atc-container-{{ ai_gen_id }} {
      padding: 12px;
      gap: 12px;
    }

    .ai-floating-atc-image-{{ ai_gen_id }} {
      width: 50px;
      height: 50px;
    }

    .ai-floating-atc-title-{{ ai_gen_id }} {
      font-size: 14px;
    }

    .ai-floating-atc-price-{{ ai_gen_id }} {
      font-size: 13px;
    }

    .ai-floating-atc-controls-{{ ai_gen_id }} {
      width: 100%;
      justify-content: space-between;
    }

    .ai-floating-atc-variant-select-{{ ai_gen_id }} {
      min-width: auto;
      flex: 1;
    }

    .ai-floating-atc-add-btn-{{ ai_gen_id }} {
      width: 100%;
      margin-top: 8px;
    }
  }
{% endstyle %}

<floating-add-to-cart-{{ ai_gen_id }}
  class="ai-floating-atc-{{ ai_gen_id }}"
  data-product-id="{{ product.id }}"
  data-trigger-offset="{{ block.settings.trigger_offset }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-floating-atc-container-{{ ai_gen_id }}">
    <div class="ai-floating-atc-product-info-{{ ai_gen_id }}">
      <div class="ai-floating-atc-image-{{ ai_gen_id }}">
        {% if product.featured_image %}
          <img
            src="{{ product.featured_image | image_url: width: 120 }}"
            alt="{{ product.featured_image.alt | escape }}"
            width="120"
            height="120"
            loading="lazy"
          >
        {% endif %}
      </div>
      <div class="ai-floating-atc-details-{{ ai_gen_id }}">
        <h3 class="ai-floating-atc-title-{{ ai_gen_id }}">{{ product.title }}</h3>
        <div class="ai-floating-atc-price-{{ ai_gen_id }}" data-price-display>
          {{ product.selected_or_first_available_variant.price | money }}
        </div>
      </div>
    </div>

    <div class="ai-floating-atc-controls-{{ ai_gen_id }}">
      {% if product.has_only_default_variant %}
        <input type="hidden" data-variant-id value="{{ product.selected_or_first_available_variant.id }}">
      {% else %}
        <select class="ai-floating-atc-variant-select-{{ ai_gen_id }}" data-variant-select>
          {% for variant in product.variants %}
            <option
              value="{{ variant.id }}"
              data-price="{{ variant.price }}"
              {% if variant.id == product.selected_or_first_available_variant.id %}selected{% endif %}
              {% unless variant.available %}disabled{% endunless %}
            >
              {{ variant.title }}
              {% unless variant.available %} - Sold out{% endunless %}
            </option>
          {% endfor %}
        </select>
      {% endif %}

      <div class="ai-floating-atc-quantity-{{ ai_gen_id }}">
        <button
          type="button"
          class="ai-floating-atc-qty-btn-{{ ai_gen_id }}"
          data-qty-decrease
          aria-label="Decrease quantity"
        >
          −
        </button>
        <input
          type="number"
          class="ai-floating-atc-qty-input-{{ ai_gen_id }}"
          data-qty-input
          value="1"
          min="1"
          aria-label="Quantity"
        >
        <button
          type="button"
          class="ai-floating-atc-qty-btn-{{ ai_gen_id }}"
          data-qty-increase
          aria-label="Increase quantity"
        >
          +
        </button>
      </div>

      <button
        type="button"
        class="ai-floating-atc-add-btn-{{ ai_gen_id }}"
        data-add-to-cart
      >
        {{ block.settings.button_text }}
      </button>
    </div>
  </div>

  <div class="ai-floating-atc-message-{{ ai_gen_id }}" data-success-message>
    {{ block.settings.success_message }}
  </div>
</floating-add-to-cart-{{ ai_gen_id }}>

<script>
  (function() {
    class FloatingAddToCart{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.triggerOffset = parseInt(this.dataset.triggerOffset) || 300;
        this.variantSelect = this.querySelector('[data-variant-select]');
        this.variantIdInput = this.querySelector('[data-variant-id]');
        this.qtyInput = this.querySelector('[data-qty-input]');
        this.qtyDecrease = this.querySelector('[data-qty-decrease]');
        this.qtyIncrease = this.querySelector('[data-qty-increase]');
        this.addToCartBtn = this.querySelector('[data-add-to-cart]');
        this.priceDisplay = this.querySelector('[data-price-display]');
        this.successMessage = this.querySelector('[data-success-message]');
      }

      connectedCallback() {
        this.setupScrollListener();
        this.setupQuantityControls();
        this.setupVariantChange();
        this.setupAddToCart();
      }

      setupScrollListener() {
        let ticking = false;
        window.addEventListener('scroll', () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              if (window.scrollY > this.triggerOffset) {
                this.classList.add('visible');
              } else {
                this.classList.remove('visible');
              }
              ticking = false;
            });
            ticking = true;
          }
        });
      }

      setupQuantityControls() {
        this.qtyDecrease.addEventListener('click', () => {
          const currentValue = parseInt(this.qtyInput.value) || 1;
          if (currentValue > 1) {
            this.qtyInput.value = currentValue - 1;
          }
        });

        this.qtyIncrease.addEventListener('click', () => {
          const currentValue = parseInt(this.qtyInput.value) || 1;
          this.qtyInput.value = currentValue + 1;
        });

        this.qtyInput.addEventListener('change', () => {
          const value = parseInt(this.qtyInput.value);
          if (isNaN(value) || value < 1) {
            this.qtyInput.value = 1;
          }
        });
      }

      setupVariantChange() {
        if (this.variantSelect) {
          this.variantSelect.addEventListener('change', (e) => {
            const selectedOption = e.target.options[e.target.selectedIndex];
            const price = selectedOption.dataset.price;
            if (price && this.priceDisplay) {
              fetch(`/cart.js`)
                .then(response => response.json())
                .then(cart => {
                  const formattedPrice = this.formatMoney(price, cart.currency);
                  this.priceDisplay.textContent = formattedPrice;
                });
            }
          });
        }
      }

      setupAddToCart() {
        this.addToCartBtn.addEventListener('click', async () => {
          const variantId = this.variantSelect 
            ? this.variantSelect.value 
            : this.variantIdInput.value;
          const quantity = parseInt(this.qtyInput.value) || 1;

          if (!variantId) return;

          this.addToCartBtn.disabled = true;
          this.addToCartBtn.textContent = 'Adding...';

          try {
            const response = await fetch('/cart/add.js', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json',
              },
              body: JSON.stringify({
                id: variantId,
                quantity: quantity
              })
            });

            if (response.ok) {
              this.showSuccessMessage();
              this.updateCartDrawer();
              this.qtyInput.value = 1;
            } else {
              throw new Error('Failed to add to cart');
            }
          } catch (error) {
            console.error('Error adding to cart:', error);
            alert('Failed to add item to cart. Please try again.');
          } finally {
            this.addToCartBtn.disabled = false;
            this.addToCartBtn.textContent = this.addToCartBtn.dataset.originalText || 'Add to cart';
          }
        });

        if (!this.addToCartBtn.dataset.originalText) {
          this.addToCartBtn.dataset.originalText = this.addToCartBtn.textContent;
        }
      }

      showSuccessMessage() {
        this.successMessage.classList.add('show');
        setTimeout(() => {
          this.successMessage.classList.remove('show');
        }, 3000);
      }

      async updateCartDrawer() {
        try {
          const response = await fetch('/cart.js');
          const cart = await response.json();

          const cartDrawer = document.querySelector('cart-drawer');
          if (cartDrawer) {
            cartDrawer.renderContents(cart);
          }

          const cartIconBubble = document.querySelector('cart-icon-bubble');
          if (cartIconBubble) {
            cartIconBubble.updateQuantity(cart.item_count);
          }

          const cartCount = document.querySelector('.cart-count-bubble');
          if (cartCount) {
            cartCount.textContent = cart.item_count;
          }

          document.documentElement.dispatchEvent(new CustomEvent('cart:refresh', {
            bubbles: true,
            detail: { cart }
          }));
        } catch (error) {
          console.error('Error updating cart:', error);
        }
      }

      formatMoney(cents, currency) {
        const amount = (cents / 100).toFixed(2);
        const currencySymbols = {
          'USD': '$',
          'EUR': '€',
          'GBP': '£',
          'CAD': 'CA$',
          'AUD': 'A$'
        };
        const symbol = currencySymbols[currency] || currency;
        return `${symbol}${amount}`;
      }
    }

    customElements.define('floating-add-to-cart-{{ ai_gen_id }}', FloatingAddToCart{{ ai_gen_id }});
  })();
</script>

