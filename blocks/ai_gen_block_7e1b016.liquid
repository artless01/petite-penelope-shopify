      min-width: 260px;
      padding: {{ block.settings.container_padding | times: 0.8 }}px;
    }

    .ai-floating-atc-toggle-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding | times: 0.8 }}px {{ block.settings.button_padding | times: 1.2 }}px;
      font-size: {{ block.settings.font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<floating-add-to-cart-{{ ai_gen_id }}
  class="ai-floating-atc-{{ ai_gen_id }}"
  data-product-id="{{ product.id }}"
  data-show-threshold="{{ block.settings.show_threshold }}"
  data-product-json="{{ product | json | escape }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-floating-atc-container-{{ ai_gen_id }}" data-container>
    <button
      type="button"
      class="ai-floating-atc-toggle-{{ ai_gen_id }}"
      data-toggle
      aria-expanded="false"
    >
      <span class="ai-floating-atc-icon-{{ ai_gen_id }}">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
      </span>
      <span data-toggle-text>{{ block.settings.button_text }}</span>
    </button>

    <div class="ai-floating-atc-content-{{ ai_gen_id }}" data-content>
      {% if product.has_only_default_variant == false %}
        <div class="ai-floating-atc-variants-{{ ai_gen_id }}">
          <label class="ai-floating-atc-variant-label-{{ ai_gen_id }}">
            {{ block.settings.variant_label }}
          </label>
          <select
            class="ai-floating-atc-variant-select-{{ ai_gen_id }}"
            data-variant-select
            aria-label="Select variant"
          >
            {% for variant in product.variants %}
              <option
                value="{{ variant.id }}"
                {% if variant == product.selected_or_first_available_variant %}selected{% endif %}
                {% unless variant.available %}disabled{% endunless %}
              >
                {{ variant.title }}
                {% unless variant.available %} - Sold out{% endunless %}
              </option>
            {% endfor %}
          </select>
        </div>
      {% endif %}

      <div class="ai-floating-atc-quantity-{{ ai_gen_id }}">
        <label class="ai-floating-atc-variant-label-{{ ai_gen_id }}">
          {{ block.settings.quantity_label }}
        </label>
        <div class="ai-floating-atc-quantity-controls-{{ ai_gen_id }}">
          <button
            type="button"
            class="ai-floating-atc-qty-button-{{ ai_gen_id }}"
            data-qty-decrease
            aria-label="Decrease quantity"
          >
            âˆ’
          </button>
          <input
            type="number"
            class="ai-floating-atc-qty-input-{{ ai_gen_id }}"
            data-qty-input
            value="1"
            min="1"
            aria-label="Quantity"
          >
          <button
            type="button"
            class="ai-floating-atc-qty-button-{{ ai_gen_id }}"
            data-qty-increase
            aria-label="Increase quantity"
          >
            +
          </button>
        </div>
      </div>

      <button
        type="button"
        class="ai-floating-atc-add-button-{{ ai_gen_id }}"
        data-add-button
      >
        <span class="ai-floating-atc-icon-{{ ai_gen_id }}" data-cart-icon>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="9" cy="21" r="1"></circle>
            <circle cx="20" cy="21" r="1"></circle>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
          </svg>
        </span>
        <span class="ai-floating-atc-spinner-{{ ai_gen_id }}" data-spinner style="display: none;"></span>
        <span data-add-text>{{ block.settings.add_button_text }}</span>
      </button>
    </div>
  </div>
</floating-add-to-cart-{{ ai_gen_id }}>

<script>
  (function() {
    class FloatingAddToCart{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.container = this.querySelector('[data-container]');
        this.toggleButton = this.querySelector('[data-toggle]');
        this.content = this.querySelector('[data-content]');
        this.variantSelect = this.querySelector('[data-variant-select]');
        this.qtyInput = this.querySelector('[data-qty-input]');
        this.qtyDecrease = this.querySelector('[data-qty-decrease]');
        this.qtyIncrease = this.querySelector('[data-qty-increase]');
        this.addButton = this.querySelector('[data-add-button]');
        this.addText = this.querySelector('[data-add-text]');
        this.cartIcon = this.querySelector('[data-cart-icon]');
        this.spinner = this.querySelector('[data-spinner]');
        this.showThreshold = parseInt(this.dataset.showThreshold) || 300;
        this.isAdding = false;
        this.isExpanded = false;
      }

      connectedCallback() {
        this.setupScrollListener();
        this.setupToggleListener();
        this.setupQuantityListeners();
        this.setupAddToCartListener();
        this.checkScroll();
      }

      setupScrollListener() {
        let ticking = false;
        window.addEventListener('scroll', () => {
          if (!ticking) {
            window.requestAnimationFrame(() => {
              this.checkScroll();
              ticking = false;
            });
            ticking = true;
          }
        });
      }

      checkScroll() {
        const scrollPosition = window.scrollY;
        if (scrollPosition > this.showThreshold) {
          this.classList.add('visible');
        } else {
          this.classList.remove('visible');
        }
      }

      setupToggleListener() {
        this.toggleButton.addEventListener('click', () => {
          this.isExpanded = !this.isExpanded;
          
          if (this.isExpanded) {
            this.content.classList.add('expanded');
            this.container.classList.remove('collapsed');
            this.toggleButton.setAttribute('aria-expanded', 'true');
          } else {
            this.content.classList.remove('expanded');
            this.container.classList.add('collapsed');
            this.toggleButton.setAttribute('aria-expanded', 'false');
          }
        });
      }

      setupQuantityListeners() {
        this.qtyDecrease.addEventListener('click', () => {
          const currentValue = parseInt(this.qtyInput.value) || 1;
          if (currentValue > 1) {
            this.qtyInput.value = currentValue - 1;
          }
        });

        this.qtyIncrease.addEventListener('click', () => {
          const currentValue = parseInt(this.qtyInput.value) || 1;
          this.qtyInput.value = currentValue + 1;
        });

        this.qtyInput.addEventListener('change', () => {
          const value = parseInt(this.qtyInput.value);
          if (isNaN(value) || value < 1) {
            this.qtyInput.value = 1;
          }
        });
      }

      setupAddToCartListener() {
        this.addButton.addEventListener('click', () => {
          this.addToCart();
        });
      }

      async addToCart() {
        if (this.isAdding) return;

        const variantId = this.variantSelect ? this.variantSelect.value : this.dataset.productId;
        const quantity = parseInt(this.qtyInput.value) || 1;

        if (!variantId) {
          alert('Please select a variant');
          return;
        }

        this.setLoadingState(true);

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              id: variantId,
              quantity: quantity
            })
          });

          if (!response.ok) {
            throw new Error('Failed to add to cart');
          }

          const data = await response.json();
          
          this.openCartDrawer();
          
          this.setLoadingState(false);
          
          this.isExpanded = false;
          this.content.classList.remove('expanded');
          this.container.classList.add('collapsed');
          this.toggleButton.setAttribute('aria-expanded', 'false');
        } catch (error) {
          console.error('Error adding to cart:', error);
          this.setLoadingState(false);
          alert('Unable to add product to cart. Please try again.');
        }
      }

      setLoadingState(loading) {
        this.isAdding = loading;
        this.addButton.disabled = loading;
        
        if (loading) {
          this.cartIcon.style.display = 'none';
          this.spinner.style.display = 'block';
          this.addText.textContent = 'Adding...';
        } else {
          this.cartIcon.style.display = 'block';
          this.spinner.style.display = 'none';
          this.addText.textContent = this.addText.dataset.originalText || 'Add to cart';
        }
      }

      openCartDrawer() {
        const cartDrawer = document.querySelector('cart-drawer');
        if (cartDrawer && typeof cartDrawer.open === 'function') {
          cartDrawer.open();
        } else {
          const cartDrawerElement = document.querySelector('[id^="CartDrawer"]');
          if (cartDrawerElement) {
            cartDrawerElement.classList.add('active');
          } else {
            window.location.href = '/cart';
          }
        }
        
        document.dispatchEvent(new CustomEvent('cart:refresh'));
      }
    }

    customElements.define('floating-add-to-cart-{{ ai_gen_id }}', FloatingAddToCart{{ ai_gen_id }});
  })();
</script>

