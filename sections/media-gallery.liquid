<div class="{{ section.settings.color_scheme }}-scheme spacing-box">
    <div class="{{ settings.layout_width }}">
        <div class="gallery-card-wrapper {{ section.settings.gallery_view }}">
          {% if section.blocks.size>0  and section.settings.gallery_view == "has-grid-view"%}
          {% if section.blocks.size>0 %}
            {% assign count1 = 0 %}
            {% capture mediaGalleryOne %}
              {% for block in section.blocks %} 
                  {% assign mod = forloop.index | modulo: 2 %}
                 {% if mod != 0 %}
                       {% assign count1 = count1 | plus:1 %}
                      <div id="image-grid-{{ block.id }}"  class="gallery-image-grid" {{ block.shopify_attributes }}>
                          <div class="gallery-image-item">
                            {% if block.settings.video != blank %}
                                <!-- Render video if it exists -->
                                <deferred-media class="deferred-media autoplay-true" data-autoplay="true">
                                  <template>
                                    {{
                                      block.settings.video | video_tag:
                                        image_size: '1100x',
                                        class: 'media-grid-video',
                                        autoplay: true,
                                        loop: true,
                                        controls: false,
                                        muted: true
                                    }}
                                  </template>
                                <noscript>
                                  <img
                                    src="{{ block.settings.video.preview_image | image_url }}"
                                    alt="{{ block.settings.video.preview_image.alt | default: shop.name | strip_html }}"
                                    width="{{ block.settings.video.preview_image.width }}"
                                    height="{{ block.settings.video.preview_image.height }}"
                                  >
                                </noscript>
                                </deferred-media>
                                {% elsif block.settings.media_image != blank %}
                                {% render 'image', image: block.settings.media_image %}
                             {% else %}
                                {{   'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                            {% endif %}
                              <{% if block.settings.icon_link != blank %}a href="{{ block.settings.icon_link }}"{% else %}div{% endif %} class="insta-liks">
                               {% if block.settings.icon != blank %}
                                  {{ block.settings.icon }}  
                                {% endif %}
                                 {% if block.settings.text %}
                                      <p>{{ block.settings.text }}</p>
                                   {% endif %}
                              </{% if block.settings.icon_link != blank %}a{% else %}div{% endif %}>
                              {% if block.settings.product != blank %}
                                  {% assign product = block.settings.product %}
                                   <a href="{{ product.url }}" class="ig-product-info">
                                        {% if product.featured_image != nil %}
                                         {% render 'image', image: product.featured_image %}
                                        {% else %}
                                          {{ 'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                      {% endif %}    
                                        <div class="ig-product-details">
                                            <div class="ig-product-name">{{ product.title }}</div>
                                            <div class="ig-price">{{ product.price | money }}</div>
                                          </div>
                                    </a>
                              {% endif %}
                          </div>
                      </div>
                   {% endif %}
                {% endfor %}
              {% endcapture %}
              {% if mediaGalleryOne != blank  %}
              
               <div class="card-image-wrapper{% if count1 == 3 %} gallery-grid-true{% endif %}">
                 {{ mediaGalleryOne }}
                </div>
              {% endif %}
            {% endif %}
          
             {% if section.settings.heading or  section.settings.description or section.settings.btn_text != blank and section.settings.btn_link != blank %}
                <div class="follow-now-box align-{{ section.settings.content_alignment }}"  {% if settings.animation_enable %}data-aos="fade" data-aos-easing="ease" data-aos-offset="0" data-aos-duration="1000" data-aos-delay="100"{% endif %} tabindex="-1">
                  <div class="follow-now-content">
                    <div class="insta--icon">
                      
                      <svg xmlns="http://www.w3.org/2000/svg" width="34" height="34" viewBox="0 0 34 34">
                        <g id="Group_25" data-name="Group 25" transform="translate(-344.9 -555.2)">
                          <path id="Path_24" data-name="Path 24" d="M355.586,555.2h12.629A10.781,10.781,0,0,1,378.9,565.886v12.629A10.78,10.78,0,0,1,368.214,589.2H355.586A10.781,10.781,0,0,1,344.9,578.514V565.886A10.781,10.781,0,0,1,355.586,555.2Zm12.629,30.843a7.566,7.566,0,0,0,7.529-7.529V565.886a7.566,7.566,0,0,0-7.529-7.528H355.343a7.566,7.566,0,0,0-7.529,7.528v12.629a7.566,7.566,0,0,0,7.529,7.529Z" transform="translate(0 0)" fill="#3d3d3d" fill-rule="evenodd"/>
                          <path id="Path_25" data-name="Path 25" d="M348.4,566.725a8.025,8.025,0,1,1,8.025,8.025A8.124,8.124,0,0,1,348.4,566.725Zm2.981,0a5.044,5.044,0,1,0,5.044-5.044A5.089,5.089,0,0,0,351.381,566.725Z" transform="translate(5.475 5.475)" fill="#3d3d3d" fill-rule="evenodd"/>
                          <path id="Path_26" data-name="Path 26" d="M357.664,559.182a1.282,1.282,0,1,1-1.282-1.282A1.211,1.211,0,0,1,357.664,559.182Z" transform="translate(14.465 3.829)" fill="#3d3d3d"/>
                        </g>
                      </svg>

                    </div>
                  {% if section.settings.heading  %}
                    <h2 class="media-gallery-title {{ section.settings.heading_size }} {{ section.settings.heading_size_mobile }}">{% if section.settings.heading != blank %}{{ section.settings.heading }}{% endif %}</h2>
                  {% endif %}
                   {% if section.settings.description %}
                      <p class="media-gallery-desc {{ section.settings.description_size }}">{{  section.settings.description  }}</p>
                    {% endif %}
                     {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
                            <a href="{{ section.settings.btn_link}}"
                              class="btn btn-{{ section.settings.btn_size }}"
                            >
                              <span>{{ section.settings.btn_text }}</span>
                            </a>
                    {% endif %}
                  </div>
                </div>
              {% endif %}
            {% if section.blocks.size>0 %}
                   {% assign count2 = 0 %}
              {% capture mediaGallerysecond %}
                   {% for block in section.blocks %}
                 {% assign mod = forloop.index | modulo: 2 %}
                 {% if mod == 0 %}
                    {% assign count2 = count2 | plus:1 %}
                  <div id="image-grid-{{ block.id }}"  class=" gallery-image-grid" {{ block.shopify_attributes }}>
                      <div class=" gallery-image-item">
                          {% if block.settings.video != blank %}
                                <!-- Render video if it exists -->
                                <deferred-media class="deferred-media autoplay-true" data-autoplay="true">
                                  <template>
                                    {{
                                      block.settings.video | video_tag:
                                        image_size: '1100x',
                                        class: 'media-grid-video',
                                        autoplay: true,
                                        loop: true,
                                        controls: false,
                                        muted: true
                                    }}
                                  </template>
                                <noscript>
                                  <img
                                    src="{{ block.settings.video.preview_image | image_url }}"
                                    alt="{{ block.settings.video.preview_image.alt | default: shop.name | strip_html }}"
                                    width="{{ block.settings.video.preview_image.width }}"
                                    height="{{ block.settings.video.preview_image.height }}"
                                  >
                                </noscript>
                                </deferred-media>
                            {% elsif block.settings.media_image != blank %}
                                {% render 'image', image: block.settings.media_image %}
                         {% else %}
                            {{   'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                        {% endif %}
                          <{% if block.settings.icon_link != blank %}a href="{{ block.settings.icon_link }}"{% else %}div{% endif %} class="insta-liks">
                           {% if block.settings.icon != blank %}
                              {{ block.settings.icon }}  
                            {% endif %}
                             {% if block.settings.text %}
                                  <p>{{ block.settings.text }}</p>
                               {% endif %}
                          </{% if block.settings.icon_link != blank %}a{% else %}div{% endif %}>
                            {% if block.settings.product != blank %}
                                  {% assign product = block.settings.product %}
                                   <a href="{{ product.url }}" class="ig-product-info">
                                        {% if product.featured_image != nil %}
                                         {% render 'image', image: product.featured_image %}
                                        {% else %}
                                          {{ 'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                      {% endif %}    
                                        <div class="ig-product-details">
                                            <div class="ig-product-name">{{ product.title }}</div>
                                            <div class="ig-price">{{ product.price | money }}</div>
                                          </div>
                                    </a>
                              {% endif %}
                      </div>
                  </div>
                   {% endif %}
                {% endfor %}
                {% endcapture %}
                {% if mediaGallerysecond != blank  %}
                  <div class="card-image-wrapper {% if count2 == 3 %} gallery-grid-true{% endif %}">
                  {{ mediaGallerysecond }}
                 </div>
                {% endif %}
            {% endif %}
            {% endif %}
            {% if section.settings.gallery_view == "has-list-view" %}
                <div class="ig-instagram-section">
                  <div class="ig-instagram-header align-{{ section.settings.content_alignment }}"  {% if settings.animation_enable %}data-aos="fade" data-aos-easing="ease" data-aos-offset="0" data-aos-duration="1000" data-aos-delay="100"{% endif %} tabindex="-1">
                    <div>
                      {% if section.settings.heading  %}
                    <h2 class="media-gallery-title {{ section.settings.heading_size }} {{ section.settings.heading_size_mobile }}">{% if section.settings.heading != blank %}{{ section.settings.heading }}{% endif %}</h2>
                  {% endif %}
                   {% if section.settings.description %}
                      <p class="media-gallery-desc {{ section.settings.description_size }}">{{  section.settings.description  }}</p>
                    {% endif %}
                    </div>
                    {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
                            <a href="{{ section.settings.btn_link}}"
                              class="btn btn-{{ section.settings.btn_size }}"
                            >
                              <span>{{ section.settings.btn_text }}</span>
                            </a>
                    {% endif %}
                  </div>
                
                  <div id="image-list-view" class="ig-image-grid ">
                      {% if section.blocks.size>0 %}
                        {% for block in section.blocks %} 
                              <div id="image-list-{{ block.id }}" class="ig-image-card gallery-image-item" {{ block.shopify_attributes }}>
                                  {% if block.settings.video != blank %}
                                      <!-- Render video if it exists -->
                                      <deferred-media class="deferred-media autoplay-true" data-autoplay="true">
                                        <template>
                                          {{
                                            block.settings.video | video_tag:
                                              image_size: '1100x',
                                              class: 'media-grid-video',
                                              autoplay: true,
                                              loop: true,
                                              controls: false,
                                              muted: true
                                          }}
                                        </template>
                                      <noscript>
                                        <img
                                          src="{{ block.settings.video.preview_image | image_url }}"
                                          alt="{{ block.settings.video.preview_image.alt | default: shop.name | strip_html }}"
                                          width="{{ block.settings.video.preview_image.width }}"
                                          height="{{ block.settings.video.preview_image.height }}"
                                        >
                                      </noscript>
                                      </deferred-media>
                                    {% elsif block.settings.media_image != blank %}
                                    {% render 'image', image: block.settings.media_image %}
                                  {% else %}
                                      {{   'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                  {% endif %}
                                <{% if block.settings.icon_link != blank %}a href="{{ block.settings.icon_link }}"{% else %}div{% endif %} class="lg-liks insta-liks align-{{ section.settings.content_alignment }}">
                                     {% if block.settings.icon != blank %}
                                        {{ block.settings.icon }}  
                                      {% endif %}
                                       {% if block.settings.text %}
                                            <p>{{ block.settings.text }}</p>
                                         {% endif %}
                                    </{% if block.settings.icon_link != blank %}a{% else %}div{% endif %}>
                                <div class="ig-overlay">
                                </div>
                                 {% if block.settings.product != blank %}
                                    {% assign product = block.settings.product %}
                                        {% if product != blank %}
                                          <a href="{{ product.url }}" class="ig-product-info">
                                              {% if product.featured_image != nil %}
                                               {% render 'image', image: product.featured_image %}
                                              {% else %}
                                                {{ 'collection-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                                            {% endif %}    
                                              <div class="ig-product-details">
                                                  <div class="ig-product-name">{{ product.title }}</div>
                                                  <div class="ig-price">{{ product.price | money }}</div>
                                                </div>
                                          </a>
                                   {% endif %}
                                   {% endif %}
                              </div>
                          {% endfor %}
                      {% endif %}
                  </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<style>

    {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      #image-grid-{{ block.id }}{
        --overlayBgColor: {{ block.settings.overlay_background_color }};
        --overlayOpacity:{{ block.settings.overlay_background_opacity | divided_by:100.0 }};
      }

    #image-list-{{ block.id }} .ig-overlay{
      background-color: {{ block.settings.overlay_background_color }};
      opacity:{{ block.settings.overlay_background_opacity | divided_by:100.0 }};
    }

    {% endfor %}
  {% endif %}
  #shopify-section-{{ section.id }} {
    --topSpace:{{ section.settings.top_space_desktop }}px;
    --bottomSpace:{{ section.settings.bottom_space_desktop }}px;
  }

  @media only screen and (max-width:767px) {
    #shopify-section-{{ section.id }}.shopify-section{
      --topSpace:{{ section.settings.top_space_mobile }}px;
      --bottomSpace:{{ section.settings.bottom_space_mobile }}px;
    }

  }
</style>

{% schema %}
{
  "name": "t:sections.media_gallery.name",
  "tag": "section",
  "class": "section-gallery",
  "max_blocks": 6,
  "disabled_on": {
   "groups": ["header", "footer","aside"]
  },
  "settings": [
    {
        "type": "select",
        "id": "gallery_view",
        "label": "t:sections.media_gallery.gallery_view.label",
        "options": [
          {
            "value": "has-grid-view",
            "label": "t:sections.media_gallery.gallery_view.option.label_grid"
          },
          {
            "value": "has-list-view",
            "label": "t:sections.media_gallery.gallery_view.option.label_list"
          }
        ],
        "default": "has-grid-view"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Add heading here",
      "label": "t:common.global.heading.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "default": "h5",
      "label": "t:common.heading_size.desktop_label",
      "options": [
      {
        "value": "h1",
          "label": "t:common.heading_size.options.extra_large.label"
        },
        {
          "value": "h2",
          "label": "t:common.heading_size.options.large.label"
        },
        {
          "value": "h3",
          "label": "t:common.heading_size.options.medium.label"
        },
        {
          "value": "h4",
          "label": "t:common.heading_size.options.small.label"
        },
        {
          "value": "h5",
          "label": "t:common.heading_size.options.extra_small.label"
        }
      ]
    },
    {
          "type": "select",
          "id": "heading_size_mobile",
          "default": "h3_mobile",
          "label": "t:common.heading_size.mobile_label",
          "options": [
              {
            "value": "h1_mobile",
            "label": "t:common.heading_size.options.extra_large.label"
            },
            {
              "value": "h2_mobile",
              "label": "t:common.heading_size.options.large.label"
            },
            {
              "value": "h3_mobile",
              "label": "t:common.heading_size.options.medium.label"
            },
            {
              "value": "h4_mobile",
              "label": "t:common.heading_size.options.small.label"
            },
            {
              "value": "h5_mobile",
              "label": "t:common.heading_size.options.extra_small.label"
            }
          ]
    },
    {
      "type":"textarea",
      "id":"description",
      "label": "t:common.global.description.label"
    },
    {
          "type": "select",
          "id": "description_size",
          "default": "textMedium",
          "label": "t:common.description_size.label",
          "options": [
            {
              "value": "textBase",
              "label": "t:common.description_size.options.small.label"
            },
            {
              "value": "textMedium",
              "label": "t:common.description_size.options.medium.label"
            },
            {
              "value": "textLarge",
              "label": "t:common.description_size.options.large.label"
            }
          ]
    },
    {
          "type": "text_alignment",
          "id": "content_alignment",
          "label": "t:common.global.alignment.label",
          "default": "left"
     },
     {
          "type": "header",
          "content": "t:common.header.button.content"
        },
        {
          "type": "text",
          "id": "btn_text",
          "label": "t:common.global.text.label",
          "default": "Shop now"
        },
        {
          "type": "url",
          "id": "btn_link",
          "label": "t:common.global.link.label"
        },
        {
          "type": "select",
          "id": "btn_size",
          "label": "t:common.btn_size.label",
          "default": "medium",
          "options": [
            {
               "value": "xsmall",
               "label": "t:common.btn_size.options.xsmall.label"
             },
             {
               "value": "small",
               "label": "t:common.btn_size.options.small.label"
             },
             {
               "value": "medium",
               "label": "t:common.btn_size.options.medium.label"
             },
             {
               "value": "large",
               "label": "t:common.btn_size.options.large.label"
             }
          ]
    },
    {
      "type": "header",
      "content": "t:common.header.colors.content"
    },
     {
        "type": "color_scheme",
        "id": "color_scheme",
        "default": "primary",
        "label": "t:common.global.color_scheme.label"
    },
    {
      "type": "header",
      "content": "t:common.header.section_spacing.content"
    },
    {
      "type": "range",
      "id": "top_space_desktop",
       "label": "t:common.section_spacing.top_space_desktop.label",
      "default": 0,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_desktop",
      "label": "t:common.section_spacing.bottom_space_desktop.label",
      "default": 80,
      "min": 0,
      "max": 150,
      "step": 5
    },
    {
      "type": "range",
      "id": "top_space_mobile",
      "label": "t:common.section_spacing.top_space_mobile.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 5
    },
    {
      "type": "range",
      "id": "bottom_space_mobile",
      "label": "t:common.section_spacing.bottom_space_mobile.label",
      "default": 40,
      "min": 0,
      "max": 100,
      "step": 5
    }
  ],
  "blocks": [
    {
      "type": "grid",
      "name": "t:sections.media_gallery.blocks.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "media_image",
          "label": "t:common.global.image.label"
        },
        {
        "type": "video",
        "id": "video",
        "label": "t:common.global.video.label"
      },
      {
        "type": "product",
        "id": "product",
        "label": "t:common.global.product.label"
      },
         {
          "type":"header",
          "content":"t:common.header.content.content"
        },
        {
          "type": "text",
          "id": "text",
          "label": "t:common.global.text.label",
          "default": "Text"
        },
        {
          "type": "header",
          "content": "t:common.header.icon.content"
        },
        {
          "type": "textarea",
          "id": "icon",
          "label": "t:common.global.svg_icon.label"
        },
        {
          "type": "url",
          "id": "icon_link",
          "label": "t:common.global.link.label"
        },
        {
          "type": "header",
           "content": "t:common.header.colors.content"
        },
        {
          "type": "color",
          "id": "overlay_background_color",
          "label": "t:common.global.overlay_color.label",
          "default": "#B3B3B3"
        },
        {
          "type": "range",
          "id": "overlay_background_opacity",
          "label": "t:common.global.overlay_opacity.label",
          "default": 0,
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.media_gallery.presets.name",
      "blocks": [
        {
          "type": "grid"
        },
        {
          "type": "grid"
        }
      ]
    }
  ]
}
{% endschema %}
