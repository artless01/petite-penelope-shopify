<div class="Custom--image-with-text" style="background-color: {{ section.settings.bg_color }};">

    <div class="container">

        <div class="custom--image-inner">

            <div class="image--side">

                <img src="{{ section.settings.image | img_url: 'master' }}">

            </div>
            <div class="text--side">
                <span class="sec--title">{{ section.settings.title }}</span>
                <p>{{ section.settings.content }}</p>
                
            </div>
            <div class="bullet--points">

                <ul>
                    {% if section.settings.tickmark != blank%}
                    <li><img src="{{ section.settings.tickmark-img | img_url: 'master' }}" />{{ section.settings.tickmark }}</li>
                    {% endif %}
                    {% if section.settings.tickmark1 != blank%}
                    <li><img src="{{ section.settings.tickmark-img1 | img_url: 'master' }}" />{{ section.settings.tickmark1 }}</li>
                    {% endif %}
                    {% if section.settings.tickmark2 != blank%}
                    <li><img src="{{ section.settings.tickmark-img2 | img_url: 'master' }}" />{{ section.settings.tickmark2 }}</li>
                    {% endif %}
                    {% if section.settings.tickmark3 != blank%}
                    <li><img src="{{ section.settings.tickmark-img3 | img_url: 'master' }}" />{{ section.settings.tickmark3 }}</li>
                    {% endif %}
                    {% if section.settings.tickmark4 != blank%}
                    <li><img src="{{ section.settings.tickmark-img4 | img_url: 'master' }}" />{{ section.settings.tickmark4 }}</li>
                    {% endif %}

                </ul>

            </div>
        </div>   

    </div>

</div>
<style>
  #shopify-section-{{ section.id }} .Custom--image-with-text {
     padding-top:{{ section.settings.top_space_desktop }}px;
     padding-bottom:{{ section.settings.bottom_space_desktop }}px;
   }

   @media only screen and (max-width:767px) {
     #shopify-section-{{ section.id }}.shopify-section .Custom--image-with-text{
       padding-top:{{ section.settings.top_space_mobile }}px;
       padding-bottom:{{ section.settings.bottom_space_mobile }}px;
     }

    }
     .image--side img{width: 100%;}
     .image--side { width: 20%;}
     .custom--image-inner {display: flex;align-items: center;justify-content: space-between;}
     .text--side p {font-size: 16px;color: #5C5B55;line-height: 24px;}
     .text--side span.sec--title {font-size: 28px;color: #5C5B55;font-weight: 500;line-height: 48px;display: block;margin-bottom: 10px;}
     .text--side {width: 40%;}
     .bullet--points {width: 30%;}
     .bullet--points ul li img {width: 100%;max-width: 25px;margin-top: -5px;margin-right: 15px;}
     .bullet--points ul li {font-size: 30px;font-family: 'Jimmy Script';color: #5C5B55;list-style: none;display: flex;align-items: center;letter-spacing: 1px;}
     @media only screen and (max-width: 800px) {
.custom--image-inner {
    flex-wrap: wrap;
}
.text--side {
    margin-top: 25px;
    margin-bottom: 25px;
}
.image--side, .text--side, .bullet--points {
    width: 100%;
}
.image--side img {
    width: 50%;
}
}
   </style>
